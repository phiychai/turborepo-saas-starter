    "better-auth": "^1.3.34",
    "better-call": "^1.0.24",
    "better-sqlite3": "^12.2.0",
    "ioredis": "^5.8.2",
    "luxon": "^3.7.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "zxcvbn": "^4.4.2"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
