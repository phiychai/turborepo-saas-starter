    "@types/node": "^22.15.18",
    "@types/pg": "^8.15.6",
    "@types/zxcvbn": "^4.4.5",
    "eslint": "^9.39.1",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
