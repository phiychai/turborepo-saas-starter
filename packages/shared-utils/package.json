{
  "name": "@turborepo-saas-starter/shared-utils",
  "version": "1.0.0",
  "description": "Shared utility functions for the app platform",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "echo 'No linting needed for utils package'",
    "lint:fix": "echo 'No linting needed for utils package'",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@turborepo-saas-starter/shared-types": "workspace:*",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "files": [
    "dist"
  ]
}
